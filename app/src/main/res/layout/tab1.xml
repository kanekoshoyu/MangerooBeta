<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    tools:context="info.androidhive.firebase.MainActivity"
    android:orientation="vertical">

    <Switch
        android:padding="@dimen/padding_normal"
        android:text="I am free for dining, invite me"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switchFree"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>
    <TextView
        android:padding="@dimen/padding_slim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Friends"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/div_bg"/>
    <ProgressBar
        android:padding="@dimen/padding_normal"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:visibility="visible" />
    <ListView
        android:id="@+id/friendList_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
