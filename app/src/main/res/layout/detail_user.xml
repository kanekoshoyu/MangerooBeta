<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_normal"
    android:orientation="vertical"
    tools:context="info.androidhive.firebase.DetailUserActivity"
    android:background="@color/colorPrimaryLight">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@color/colorPrimaryLight"

        android:layout_gravity="center_horizontal"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_slim"
        android:orientation="horizontal">
        <TextView
            android:text="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="2"/>
        <TextView
            android:text="Your Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_slim"
        android:orientation="horizontal">
        <TextView
            android:text="E-mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_emailTag"
            android:layout_weight="2" />
        <TextView
            android:text="Your Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_slim"
        android:orientation="horizontal">
        <TextView
            android:text="Phone Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phoneTag"
            android:layout_weight="2" />
        <TextView
            android:text="Your Phone number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phone"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_slim"
        android:orientation="horizontal">
        <TextView
            android:text="Availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_freeTag"
            android:layout_weight="2" />
        <TextView
            android:text="Your Availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_free"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:text="Add as Friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:theme="@style/HighButton"
        android:textColor="@android:color/white"
        />

    <Button
        android:text="Invite for Dining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_invite"
        android:theme="@style/HighButton"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/tv_lastInvitation"
        android:text="You have not invited before"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_unfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Unfriend"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>
</LinearLayout>