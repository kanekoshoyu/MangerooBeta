<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/listInvitationIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="@dimen/padding_normal" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_normal"
        android:paddingBottom="@dimen/padding_normal"
        android:layout_weight="1">
        <TextView
            android:text="UserName"
            android:paddingBottom="@dimen/padding_slim"
            android:id="@+id/listInvitationUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/listFriendIcon"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp" />

        <TextView
            android:text="dateTime"
            android:id="@+id/listInvitationDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listInvitationUserName"
            android:layout_toRightOf="@+id/listFriendIcon"
            android:textColor="@color/black"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/padding_normal"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/Button_AcceptInvitation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_check_black_24dp"
            android:tint="@color/white" />
    </LinearLayout>
</LinearLayout>
