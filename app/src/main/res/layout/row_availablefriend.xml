<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:id="@+id/friendSearch"
    android:focusableInTouchMode="false"
    android:padding="@dimen/padding_normal"
    android:focusable="false">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listFriendIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@color/colorPrimaryLight"

        android:layout_gravity="center_horizontal"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/listFriendName"
        android:text="Friend Name Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_alignBottom="@+id/listFriendIcon"
        android:layout_toRightOf="@+id/listFriendIcon"
        android:layout_toEndOf="@+id/listFriendIcon"
        android:padding="@dimen/padding_normal" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Invite"
        android:theme="@style/RedButton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Accept"
        android:theme="@style/GreenButton"
        android:visibility="gone"/>
</RelativeLayout>