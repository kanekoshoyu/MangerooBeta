<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:orientation="vertical"
    android:weightSum="1">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>
    <TextView
        android:padding="@dimen/padding_slim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Participant"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/div_bg"/>
    <ProgressBar
        android:padding="@dimen/padding_normal"
        android:id="@+id/participantSearchListProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:visibility="visible" />

    <ListView
        android:id="@+id/participantSearchList_view"
        android:layout_width="match_parent"
        android:layout_height="470dp" />

    <Button
        android:id="@+id/InviteParticipantButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add friends to invitation list"
        android:theme="@style/LowButton"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>
